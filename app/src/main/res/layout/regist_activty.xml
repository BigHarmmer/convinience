<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:text="昵称"
        android:textSize="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:id="@+id/reg_text_name"
        android:layout_below="@+id/reg_text_phone"
        android:layout_alignLeft="@+id/reg_text_phone"
        android:layout_alignStart="@+id/reg_text_phone" />

    <TextView
        android:text="密码"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:id="@+id/reg_text_pass"
        android:layout_below="@+id/reg_text_name"
        android:layout_alignLeft="@+id/reg_text_name"
        android:layout_alignStart="@+id/reg_text_name" />

    <EditText
        android:hint="请输入密码大于6位"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/reg_pass"
        android:layout_alignBaseline="@+id/reg_text_pass"
        android:layout_alignBottom="@+id/reg_text_pass"
        android:layout_alignLeft="@+id/reg_sure"
        android:layout_alignStart="@+id/reg_sure" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"

        android:hint="请输入昵称"
        android:ems="10"
        android:id="@+id/reg_name"
        android:layout_alignBaseline="@+id/reg_text_name"
        android:layout_alignBottom="@+id/reg_text_name"
        android:layout_alignLeft="@+id/reg_pass"
        android:layout_alignStart="@+id/reg_pass" />

    <EditText
        android:hint="请输入手机号"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/reg_phone"
        android:layout_alignBaseline="@+id/reg_text_phone"
        android:layout_alignBottom="@+id/reg_text_phone"
        android:layout_alignLeft="@+id/reg_name"
        android:layout_alignStart="@+id/reg_name" />

    <EditText
        android:hint="请输入确认密码"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/reg_sure"
        android:layout_marginLeft="32dp"
        android:layout_marginStart="32dp"
        android:layout_alignBaseline="@+id/reg_text_sure"
        android:layout_alignBottom="@+id/reg_text_sure"
        android:layout_toRightOf="@+id/reg_text_sure"
        android:layout_toEndOf="@+id/reg_text_sure" />

    <TextView
        android:text="确认密码"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="31dp"
        android:id="@+id/reg_text_sure"
        android:layout_below="@+id/reg_pass"
        android:layout_alignLeft="@+id/reg_text_pass"
        android:layout_alignStart="@+id/reg_text_pass" />

    <Button
        android:enabled="false"
        android:text="注册"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/reg_sure"
        android:layout_alignLeft="@+id/reg_text_sure"
        android:layout_alignStart="@+id/reg_text_sure"
        android:layout_marginTop="33dp"
        android:id="@+id/regist"
        android:layout_alignRight="@+id/reg_sure"
        android:layout_alignEnd="@+id/reg_sure" />

    <TextView
        android:text="手机号"
        android:textSize="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="81dp"
        android:id="@+id/reg_text_phone"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/jump_login"
        android:textSize="14sp"
        android:textColor="#999999"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:text="登录"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>